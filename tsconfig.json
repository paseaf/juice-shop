{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "allowJs": true,
    "module": "commonjs",
    "target": "es2018",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2018"]
  },
  "exclude": [
    "node_modules",
    "frontend",
    "dist",
    "vagrant",
    "**/*.d.ts",
    ".eslintrc.js"
  ],
}
